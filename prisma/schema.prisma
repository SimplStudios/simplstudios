// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model App {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  tagline     String
  description String
  icon        String
  logoUrl     String?  @map("logo_url")
  color       String   @default("blue")
  screenshots String[]
  features    String[]
  status      String   @default("live")
  url         String?
  platforms   String[]
  pinned      Boolean  @default(false)
  pinnedOrder Int?     @map("pinned_order")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  reviews     Review[]

  @@map("apps")
}

model Update {
  id        String   @id @default(cuid())
  appSlug   String   @map("app_slug")
  title     String
  content   String
  version   String?
  type      String   @default("update")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("updates")
}

model Testimonial {
  id        String   @id @default(cuid())
  appSlug   String?  @map("app_slug")
  author    String
  role      String?
  avatar    String?
  content   String
  rating    Int      @default(5)
  featured  Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("testimonials")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("users")
}

// Message Board Posts (replaces Announcements)
model Post {
  id        String    @id @default(cuid())
  title     String
  content   String
  type      String    @default("announcement") // announcement, update, release, news
  imageUrl  String?   @map("image_url") // Optional attached image
  pinned    Boolean   @default(false)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  comments  Comment[]
  likes     PostLike[]

  @@map("posts")
}

// Comments on message board posts
model Comment {
  id        String   @id @default(cuid())
  postId    String   @map("post_id")
  author    String
  content   String
  createdAt DateTime @default(now()) @map("created_at")

  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("comments")
}

// Like tracking for posts (anonymous via session)
model PostLike {
  id        String   @id @default(cuid())
  postId    String   @map("post_id")
  sessionId String   @map("session_id")
  createdAt DateTime @default(now()) @map("created_at")

  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, sessionId])
  @@map("post_likes")
}

// Homepage banner announcements
model Announcement {
  id        String    @id @default(cuid())
  title     String
  content   String
  type      String    @default("info") // info, warning, success, release
  priority  Int       @default(0)
  active    Boolean   @default(true)
  expiresAt DateTime? @map("expires_at")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@map("announcements")
}

// User reviews for apps with ratings
model Review {
  id            String    @id @default(cuid())
  appSlug       String    @map("app_slug")
  author        String
  email         String?
  content       String
  rating        Int       @default(5)
  approved      Boolean   @default(false)
  featured      Boolean   @default(false)
  adminResponse String?   @map("admin_response")
  respondedAt   DateTime? @map("responded_at")
  createdAt     DateTime  @default(now()) @map("created_at")

  app           App       @relation(fields: [appSlug], references: [slug], onDelete: Cascade)

  @@map("reviews")
}

// User feedback/error messages to admins
model UserMessage {
  id            String    @id @default(cuid())
  name          String
  email         String
  subject       String
  message       String
  type          String    @default("feedback") // feedback, bug, error, question
  status        String    @default("unread") // unread, read, replied, resolved
  adminReply    String?   @map("admin_reply")
  repliedAt     DateTime? @map("replied_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@map("user_messages")
}

// Site error/status page configuration
model SiteStatus {
  id          String   @id @default(cuid())
  title       String   @default("We'll be right back")
  message     String   @default("We're experiencing some technical difficulties. Please check back soon.")
  isActive    Boolean  @default(false) @map("is_active")
  type        String   @default("maintenance") // maintenance, error, update
  estimatedFix String? @map("estimated_fix")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("site_status")
}

// Security: Login attempt tracking
model LoginAttempt {
  id        String   @id @default(cuid())
  ipAddress String   @map("ip_address")
  userAgent String?  @map("user_agent")
  success   Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  @@index([ipAddress, createdAt])
  @@map("login_attempts")
}

// =====================
// THE VAULT - Secure Admin Section
// =====================

// Vault: Stored credentials (API keys, DB urls, admin creds)
model VaultCredential {
  id          String   @id @default(cuid())
  name        String
  type        String   // api_key, database_url, admin_credential, other
  service     String   // Service name (e.g., "Stripe", "Neon", "Vercel")
  identifier  String?  // Username, key name, etc.
  secret      String   // Encrypted value (API key, password, URL)
  notes       String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("vault_credentials")
}

// Vault: Comprehensive audit log
model AuditLog {
  id            String   @id @default(cuid())
  action        String   // login_attempt, login_success, login_failed, credential_view, etc.
  ipAddress     String   @map("ip_address")
  userAgent     String?  @map("user_agent")
  isVpn         Boolean  @default(false) @map("is_vpn")
  country       String?
  city          String?
  details       String?  // JSON string with additional details
  createdAt     DateTime @default(now()) @map("created_at")

  @@index([ipAddress, createdAt])
  @@index([action, createdAt])
  @@map("audit_logs")
}

// Vault: Banned IPs
model BannedIP {
  id          String    @id @default(cuid())
  ipAddress   String    @unique @map("ip_address")
  reason      String    @default("Too many failed login attempts")
  failedCount Int       @default(3) @map("failed_count")
  bannedAt    DateTime  @default(now()) @map("banned_at")
  expiresAt   DateTime? @map("expires_at") // null = permanent
  unbannedAt  DateTime? @map("unbanned_at")
  isActive    Boolean   @default(true) @map("is_active")

  @@map("banned_ips")
}

// Vault: Admin chat messages
model AdminChatMessage {
  id        String   @id @default(cuid())
  sender    String   @default("Admin") // Admin name or identifier
  message   String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("admin_chat_messages")
}

// Vault: Connected SimplStudios databases for user counting
model ConnectedDatabase {
  id            String   @id @default(cuid())
  name          String   // Display name
  appName       String   @map("app_name") // Which app this belongs to
  connectionUrl String   @map("connection_url") // Database connection URL
  serviceRole   String?  @map("service_role") // For Supabase-style auth
  userTable     String   @default("users") @map("user_table") // Table to count users from
  lastUserCount Int?     @map("last_user_count")
  lastCheckedAt DateTime? @map("last_checked_at")
  isActive      Boolean  @default(true) @map("is_active")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("connected_databases")
}

// =====================
// VAULT KEYGEN INTEGRATION
// =====================

// Events logged from external Key Maker site
model VaultEvent {
  id          String   @id @default(cuid())
  eventType   String   @map("event_type") // failed_attempt, lockout, devtools_opened, key_generated, key_expired, key_validated
  ipAddress   String   @map("ip_address")
  userAgent   String?  @map("user_agent")
  location    String?  // Country/City if available
  details     String?  // JSON: partial code hex, attempt number, developer name, etc.
  severity    String   @default("info") // info, warning, critical
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([ipAddress, createdAt])
  @@index([eventType, createdAt])
  @@map("vault_events")
}

// Used security keys (prevent replay attacks)
model UsedVaultKey {
  id          String   @id @default(cuid())
  instanceId  String   @unique @map("instance_id") // The 4-char instance ID from key
  fullKeyHash String   @map("full_key_hash") // SHA256 of full key
  developerHex String  @map("developer_hex") // Who generated it
  ipAddress   String   @map("ip_address") // Where it was used
  generatedAt DateTime @map("generated_at") // Extracted from key timestamp
  usedAt      DateTime @default(now()) @map("used_at")

  @@index([instanceId])
  @@map("used_vault_keys")
}

// Keygen lockouts (separate from admin login bans)
model KeygenLock {
  id          String    @id @default(cuid())
  ipAddress   String    @unique @map("ip_address")
  reason      String    @default("Too many failed keygen attempts")
  attempts    Int       @default(3)
  lockedAt    DateTime  @default(now()) @map("locked_at")
  unlockedAt  DateTime? @map("unlocked_at")
  unlockedBy  String?   @map("unlocked_by") // Admin who unlocked
  isLocked    Boolean   @default(true) @map("is_locked")
  restoreUrl  String?   @map("restore_url") // Pre-built admin restore URL

  @@map("keygen_locks")
}

// Valid access codes for key generation
model VaultAccessCode {
  id        String   @id @default(cuid())
  codeHex   String   @unique @map("code_hex") // Hex-encoded access code
  codeName  String   @map("code_name") // Human-readable name (e.g., "Andy")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("vault_access_codes")
}
